@{
    ViewData["Title"] = "Fever Check";
}
@if(ViewBag.Message != null){
    <p>@ViewBag.Message</p>
}

<form asp-controller="FeverCheck" asp-action="GetTemperature" method="post" >
    <label>Body Temperature:</label>
    <input type="number" name="GetTemperature" value="37.5" step="0.1" />
    <input type="submit" value="Check!" />
</form>